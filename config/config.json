{
    "stack": {
        "name": "CoiniumServ.com",
        "nodes": [
            {
                "location": "eu",
                "address": "127.0.0.1",
                "default": true
            }
        ]
    },
    "statistics": {
        "updateInterval": 60,
        "hashrateWindow": 300
    },
    "website": {
        "enabled": true,
        "bind": "",
        "port": 80,
        "template": "default",
        "feed": "",
        "backend": {
            "metrics": {
                "enabled": false,
				"password":""
            }
        }
    },
    "logging": {
        "root": "logs",
        "targets": [
			{
				"enabled": true,
				"type": "console",
				"level": "debug"
			},
            {
                "enabled": true,
                "type": "file",
                "filename": "server.log",
                "rolling": true,
                "level": "information"
            },
            {
                "enabled": true,
                "type": "file",
                "filename": "debug.log",
                "rolling": true,
                "level": "verbose"
            },
            {
                "enabled": false,
                "type": "packet",
                "filename": "packet.log",
                "rolling": false,
                "level": "verbose"
            }
        ]
    }
} 
